@model Assignment1.Models.Employee
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Employee", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.EmpId)
    <div class="form-group">
        @Html.LabelFor(model => model.EmpName, new { @class = "control-label" })
        @Html.EditorFor(model => model.EmpName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.EmpName)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.EmpJob, new { @class = "control-label" })
        @Html.EditorFor(model => model.EmpJob, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.EmpJob)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.EmpSal, new { @class = "control-label" })
        @Html.EditorFor(model => model.EmpSal, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.EmpJoinDate, new { @class = "control-label" })
        @Html.EditorFor(model => model.EmpJoinDate, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">

        @Html.LabelFor(model => model.DeptId, new { @class = "control-label" })
        <div class="input-group">
            <span class="input-group-addon">$</span>
            @Html.EditorFor(model => model.DeptId, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}